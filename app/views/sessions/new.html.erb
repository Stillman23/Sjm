  <div class="form-group">
    Email: <input type="email" name="email"  placeholder="Enter Email" class="form-control box-width">
  </div>
  <div>
    Password: <input type="password" name="password" placeholder="Enter Password" class="form-control box-width">
  </div>
  <br>
  <input type="submit" class="btn btn-danger" value="Log In" class="form-control">
<% end %>






<script type="text/javascript">
var box = document.getElementById('box');

function fadeOut(elem, speed) {

  if (!elem.style.opacity) {
    elem.style.opacity = 1;
  }
  setInterval(function() {

    elem.style.opacity -= 0.02;
 
  }, speed / 20);
}

fadeOut(box, 2000);
</script>













